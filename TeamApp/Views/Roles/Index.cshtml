@model TeamApp.ViewModels.RoleViewModel


<div class="w-50 mx-auto mt-5">
    <form asp-controller="Profile" asp-action="Roles" method="post">
        <div class="mb-3">
            <label class="form-label text-start fw-bold">Name of the new role:</label>
            <input type="text" class="form-control" asp-for="Name" />
            <span class="text-danger" asp-validation-for="Name"></span>
        </div>
        <div class="mt-3">
            <button type="submit" class="btn btn-primary w-100">Add new role</button>
        </div>
    </form>
</div>

