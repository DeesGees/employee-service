@model Equipment


<div class="d-flex flex-row justify-content-center">
    <form asp-controller="Equipment" asp-action="Edit" method="Post" style="width: 30rem; border:solid 1px; border-radius: 10px;" class="mt-5 p-5">
        <div class="">
            <lable class="form-label mt-3">Type:</lable>
            <input class="form-control mt-3" name="TypeOfEqp" value="@Model.TypeOfEqp" />
        </div>
        <div class="mt-2">
            <lable class="form-label mt-3">Model</lable>
            <input class="form-control mt-3" name="Model" value="@Model.Model" />
        </div>
        <div class="mt-2">
            <lable class="form-label mt-3">Serial Number</lable>
            <input class="form-control mt-3" name="SerialNumber" value="@Model.SerialNumber" />
        </div>
        <div class="mt-2">
            <lable class="form-label mt-3">Please Select:</lable>
            <select class="form-select mt-3" name="InUse">
                <option value="1">In Use</option>
                <option value="0">Not in use</option>
            </select>
        </div>
        <input type="hidden" value="@Model.UserId" name="UserId" />
        <div>
            <button type="submit" class="btn btn-primary mt-4 px-5">Save</button>
        </div>
    </form>
</div>
